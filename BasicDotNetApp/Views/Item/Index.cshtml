
@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<BasicDotNetApp.Models.Item>

<h1 class="text-center">Index - Items</h1>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Borrowed Items list</h2>
        </div>
        <div class="col-6">
            <a class="text-primary" asp-controller="Item" asp-action="Create">Create new item</a>
        </div>
    </div><br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th scope="col">Item Name</th>
                    <th scope="col">Borrwer</th>
                    <th scope="col">Lender</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td width="30%">@item.ItemName</td>
                        <td width="30%">@item.Borrower</td>
                        <td width="30%">@item.Lender</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet!</p>
    }
</div>

